{
  "display_information": {
    "name": "your-bot-name",
    "description": "your-bot-description",
    "background_color": "#000000"
  },
  "features": {
    "bot_user": {
      "display_name": "your-bot-name",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "app_mentions:read",
        "chat:write",
        "chat:write.public",
        "im:history",
        "reactions:read",
        "reactions:write",
        "users:read",
        "channels:read",
        "groups:read",
        "mpim:read",
        "im:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "app_mention",
        "message.im"
      ]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
